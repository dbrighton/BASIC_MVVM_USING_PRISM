<UserControl
    x:Class="BASIC_MVVM.Views.ViewOne"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BASIC_MVVM.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Border MinWidth="300" MinHeight="300" BorderBrush="#FF171515" CornerRadius="5" BorderThickness="3" >
        <Grid Background="WhiteSmoke" Margin="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="View one:" Margin="3"/>
            <StackPanel Orientation="Horizontal" Margin="3" Grid.Row="1">
                <TextBlock Text="Process Status:"/>
                <TextBlock Text="{x:Bind ViewModel.PercentCompleate, Mode=OneWay}" Margin="2"/>
                <TextBlock Text="%" Margin="1"/>
            </StackPanel>
        </Grid>

    </Border>
</UserControl>